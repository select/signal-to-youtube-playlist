{
  "name": "signal-music-group",
  "version": "1.0.0",
  "description": "Signal Music Link Aggregation & Playlist Management System",
  "type": "module",
  "scripts": {
    "lint": "oxlint src/",
    "lint:fix": "oxlint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "lint:ts": "tsc --noEmit",
    "youtube": "tsx src/youtube/examples.ts",
    "sync": "tsx src/update.ts",
    "sync:legacy": "tsx src/update-legacy.ts",
    "anonymize": "tsx src/anonymize.ts"
  },
  "keywords": ["signal", "youtube", "music", "playlist", "aggregation"],
  "author": "Signal Music Group Project",
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.20.0",
  "dependencies": {
    "better-sqlite3-multiple-ciphers": "11.10.0",
    "chalk": "5.3.0",
    "commander": "12.1.0",
    "dotenv": "16.4.7",
    "google-auth-library": "10.5.0",
    "googleapis": "164.1.0"
  },
  "devDependencies": {
    "@types/node": "22.10.5",
    "@typescript-eslint/eslint-plugin": "8.19.1",
    "@typescript-eslint/parser": "8.19.1",
    "@vitest/coverage-v8": "2.1.8",
    "eslint": "9.18.0",
    "oxlint": "1.26.0",
    "prettier": "3.4.2",
    "tsx": "4.19.2",
    "typescript": "5.7.3",
    "vitest": "2.1.8"
  }
}
